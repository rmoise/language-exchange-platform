{
  "name": "Staking Platform Design System",
  "version": "2.0.0",
  "description": "Design system extracted from Staking/DeFi dashboard interface",
  
  "colors": {
    "primary": {
      "purple": "#8B7FDB",
      "purpleLight": "#A394FF",
      "purpleDark": "#6B5FCF",
      "gradient": "linear-gradient(135deg, #8B7FDB 0%, #B8ACFF 100%)"
    },
    "background": {
      "dark": "#0F0F14",
      "darkSecondary": "#1A1A24",
      "darkTertiary": "#252532",
      "card": "#1E1E2E",
      "cardHover": "#262637"
    },
    "text": {
      "primary": "#FFFFFF",
      "secondary": "#B8BCC8",
      "tertiary": "#7B7F8E",
      "muted": "#4A4D5A"
    },
    "status": {
      "success": "#22C55E",
      "successLight": "#4ADE80",
      "error": "#EF4444",
      "errorLight": "#F87171",
      "warning": "#F59E0B",
      "info": "#3B82F6"
    },
    "chart": {
      "ethereum": "#627EEA",
      "bnb": "#F3BA2F",
      "polygon": "#8247E5",
      "positive": "#22C55E",
      "negative": "#EF4444"
    },
    "accent": {
      "pink": "#EC4899",
      "blue": "#3B82F6",
      "cyan": "#06B6D4",
      "orange": "#F97316"
    }
  },

  "typography": {
    "fontFamily": {
      "primary": "-apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', Roboto, sans-serif",
      "mono": "'SF Mono', 'Monaco', 'Cascadia Code', monospace"
    },
    "fontSizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "2rem",
      "4xl": "2.5rem",
      "5xl": "3rem"
    },
    "fontWeights": {
      "light": 300,
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeights": {
      "tight": 1.2,
      "normal": 1.5,
      "relaxed": 1.75
    }
  },

  "spacing": {
    "0": "0",
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "0.75rem",
    "4": "1rem",
    "5": "1.25rem",
    "6": "1.5rem",
    "8": "2rem",
    "10": "2.5rem",
    "12": "3rem",
    "16": "4rem",
    "20": "5rem"
  },

  "borderRadius": {
    "sm": "0.375rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "2xl": "1.25rem",
    "3xl": "1.5rem",
    "full": "9999px",
    "card": "1.25rem",
    "button": "0.75rem"
  },

  "shadows": {
    "sm": "0 2px 4px rgba(0, 0, 0, 0.3)",
    "md": "0 4px 8px rgba(0, 0, 0, 0.4)",
    "lg": "0 8px 16px rgba(0, 0, 0, 0.5)",
    "xl": "0 12px 24px rgba(0, 0, 0, 0.6)",
    "glow": {
      "purple": "0 0 20px rgba(139, 127, 219, 0.3)",
      "success": "0 0 20px rgba(34, 197, 94, 0.3)",
      "error": "0 0 20px rgba(239, 68, 68, 0.3)"
    }
  },

  "components": {
    "card": {
      "background": "#1E1E2E",
      "backgroundHover": "#262637",
      "border": "1px solid rgba(255, 255, 255, 0.08)",
      "borderRadius": "1.25rem",
      "padding": "1.5rem",
      "shadow": "0 4px 8px rgba(0, 0, 0, 0.4)"
    },
    "button": {
      "primary": {
        "background": "linear-gradient(135deg, #8B7FDB 0%, #B8ACFF 100%)",
        "color": "#FFFFFF",
        "borderRadius": "0.75rem",
        "padding": "0.75rem 2rem",
        "fontWeight": 600,
        "hover": {
          "background": "linear-gradient(135deg, #7B6FCB 0%, #A898EF 100%)",
          "shadow": "0 0 20px rgba(139, 127, 219, 0.3)"
        }
      },
      "secondary": {
        "background": "rgba(139, 127, 219, 0.1)",
        "color": "#8B7FDB",
        "border": "1px solid #8B7FDB",
        "borderRadius": "0.75rem",
        "padding": "0.75rem 2rem",
        "hover": {
          "background": "rgba(139, 127, 219, 0.2)"
        }
      },
      "ghost": {
        "background": "transparent",
        "color": "#B8BCC8",
        "borderRadius": "0.75rem",
        "padding": "0.5rem 1rem",
        "hover": {
          "background": "rgba(255, 255, 255, 0.05)"
        }
      }
    },
    "badge": {
      "default": {
        "background": "rgba(139, 127, 219, 0.2)",
        "color": "#A394FF",
        "borderRadius": "0.375rem",
        "padding": "0.25rem 0.75rem",
        "fontSize": "0.75rem",
        "fontWeight": 600
      },
      "success": {
        "background": "rgba(34, 197, 94, 0.2)",
        "color": "#4ADE80"
      },
      "error": {
        "background": "rgba(239, 68, 68, 0.2)",
        "color": "#F87171"
      }
    },
    "input": {
      "background": "rgba(255, 255, 255, 0.05)",
      "border": "1px solid rgba(255, 255, 255, 0.1)",
      "borderRadius": "0.75rem",
      "padding": "0.75rem 1rem",
      "color": "#FFFFFF",
      "placeholder": "#7B7F8E",
      "focus": {
        "border": "1px solid #8B7FDB",
        "shadow": "0 0 0 3px rgba(139, 127, 219, 0.1)"
      }
    },
    "chart": {
      "background": "transparent",
      "gridColor": "rgba(255, 255, 255, 0.05)",
      "tooltipBackground": "#252532",
      "tooltipBorder": "1px solid rgba(255, 255, 255, 0.1)"
    },
    "sidebar": {
      "background": "#1A1A24",
      "border": "1px solid rgba(255, 255, 255, 0.08)",
      "itemHover": "rgba(139, 127, 219, 0.1)",
      "itemActive": "rgba(139, 127, 219, 0.2)",
      "iconColor": "#7B7F8E",
      "iconActive": "#8B7FDB"
    },
    "metric": {
      "background": "rgba(255, 255, 255, 0.03)",
      "border": "1px solid rgba(255, 255, 255, 0.08)",
      "borderRadius": "1rem",
      "padding": "1.5rem",
      "title": {
        "color": "#7B7F8E",
        "fontSize": "0.875rem",
        "fontWeight": 500
      },
      "value": {
        "color": "#FFFFFF",
        "fontSize": "2rem",
        "fontWeight": 700
      },
      "change": {
        "positive": "#22C55E",
        "negative": "#EF4444",
        "fontSize": "0.875rem",
        "fontWeight": 600
      }
    }
  },

  "animations": {
    "duration": {
      "fast": "150ms",
      "normal": "300ms",
      "slow": "500ms"
    },
    "easing": {
      "default": "cubic-bezier(0.4, 0, 0.2, 1)",
      "smooth": "cubic-bezier(0.25, 0.1, 0.25, 1)",
      "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
    },
    "hover": {
      "scale": "transform: scale(1.02)",
      "lift": "transform: translateY(-2px)",
      "glow": "box-shadow: 0 0 20px rgba(139, 127, 219, 0.3)"
    }
  },

  "layout": {
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    },
    "container": {
      "maxWidth": "1400px",
      "padding": "1.5rem",
      "margin": "0 auto"
    },
    "grid": {
      "columns": 12,
      "gap": "1.5rem"
    },
    "sidebar": {
      "width": "260px",
      "collapsedWidth": "80px"
    }
  },

  "charts": {
    "colors": {
      "primary": ["#8B7FDB", "#A394FF", "#6B5FCF"],
      "secondary": ["#3B82F6", "#06B6D4", "#8B5CF6"],
      "gradients": {
        "purple": "linear-gradient(180deg, rgba(139, 127, 219, 0.3) 0%, rgba(139, 127, 219, 0) 100%)",
        "green": "linear-gradient(180deg, rgba(34, 197, 94, 0.3) 0%, rgba(34, 197, 94, 0) 100%)",
        "red": "linear-gradient(180deg, rgba(239, 68, 68, 0.3) 0%, rgba(239, 68, 68, 0) 100%)"
      }
    },
    "line": {
      "strokeWidth": 2,
      "smooth": true
    },
    "area": {
      "fillOpacity": 0.3
    }
  },

  "crypto": {
    "tokenColors": {
      "ETH": "#627EEA",
      "BNB": "#F3BA2F",
      "MATIC": "#8247E5",
      "AVAX": "#E84142",
      "SOL": "#14F195",
      "ADA": "#3468D1"
    },
    "icons": {
      "size": {
        "sm": "24px",
        "md": "32px",
        "lg": "40px"
      }
    }
  }
}